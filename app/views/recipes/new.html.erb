<%= render 'shared/page_title', title: "Create a New Naija Recipe" %>

<% if @recipe.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@recipe.errors.count, "error") %>
            prohibited this <%= @recipe.class %> from being saved:
          </h2>
          <div class="panel-body">
            <ul>
              <% @recipe.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>  
      </div>
    </div>
  </div>

<% end %>

<%= form_for(@recipe, :html => {class: "form-horizontal" }) do |f| %>
<div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter name of recipe", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "please indicate the steps of this recipe in details" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-12 center">
      <%= f.submit class: "btn btn-danger" %>
    </div>
  </div>

<% end %> 
<div class = "center"><%= link_to "Cancel new recipe and return to recipe listing", recipes_path, class: "text-info"  %></div>
  